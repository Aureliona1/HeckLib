    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "name": "Launch Program (deno)",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": ["run", "-A", "--no-check"],
        "program": "${workspaceFolder}/script.ts",
        "attachSimplePort": 9229
      },
      {
        "type": "node",
        "name": "Launch Program (debug) (deno)",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": ["run", "--inspect-brk", "-A", "--no-check"],
        "program": "${workspaceFolder}/script.ts",
        "attachSimplePort": 9229
      }
    ]
}